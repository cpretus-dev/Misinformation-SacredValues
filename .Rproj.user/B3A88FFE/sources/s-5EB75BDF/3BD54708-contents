         Baseline_nSV = mean(c(Baseline_emo_nsv, Baseline_neu_nsv), na.rm = T),
         Flag_SV = mean(c(Exp_flag_emo_sv,Exp_flag_neu_sv), na.rm = T),
         Flag_nSV = mean(c(Exp_flag_emo_nsv,Exp_flag_neu_nsv), na.rm = T))

